const SCALE_MIN = 0.8
const SCALE_MAX = 1.8

#--- public variables - order: export > normal var > onready --------------------------------------

#--- private variables - order: export > normal var > onready -------------------------------------

onready var _animator: AnimationPlayer = $AnimationPlayer

### -----------------------------------------------------------------------------------------------


### Built in Engine Methods -----------------------------------------------------------------------

func _ready():
	randomize()
	var start_point = randf() * _animator.get_animation("idle").length
	var new_scale = randf() * (SCALE_MAX - SCALE_MIN) + SCALE_MIN 
	
	scale = Vector2.ONE * new_scale
	
	_animator.play("idle")
	_animator.seek(start_point, true)

