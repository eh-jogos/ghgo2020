func play() -> void:
	var category: Node
	if current_level.value <= 4:
		category = $lvl4
	elif current_level.value <= 6:
		category = $lvl6
	else:
		category = $lvl7
	
	var index = randi() % category.get_child_count()
	category.get_child(index).play()

